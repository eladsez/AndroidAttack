<?xml version="1.0" encoding="utf-8"?>
<motion-params acceleration="160" maxVelocity="100" deaccelerationDistance="60" proximityDistance="10" initialState="stop" awakeState="awake" moveStatePrefix="move" wallStatePrefix="wall">
    <motion state="stop" nextState="wait" checkWall="true">
        <item drawable="@drawable/usagi_mati1" duration="5000" />
        <repeat-item repeatCount="4">
            <item drawable="@drawable/usagi_kaki1" duration="250" />
            <item drawable="@drawable/usagi_kaki2" duration="250" />
        </repeat-item>
        <item drawable="@drawable/usagi_mati1" duration="1000" />
    </motion>
    <motion state="wait">
        <item drawable="@drawable/usagi_mati1" duration="4000" />
        <repeat-item repeatCount="4">
            <item drawable="@drawable/usagi_kaki1" duration="250" />
            <item drawable="@drawable/usagi_kaki2" duration="250" />
        </repeat-item>
        <item drawable="@drawable/usagi_mati1" duration="5000" />
        <item drawable="@drawable/usagi_mati2" duration="1500" />
        <repeat-item>
            <repeat-item repeatCount="50">
                <item drawable="@drawable/usagi_sleep1" duration="1000" />
                <item drawable="@drawable/usagi_sleep2" duration="1000" />
            </repeat-item>
            <item drawable="@drawable/usagi_akubi1" duration="500" />
            <item drawable="@drawable/usagi_akubi_l" duration="500" />
            <item drawable="@drawable/usagi_akubi_r" duration="500" />
            <item drawable="@drawable/usagi_akubi1" duration="500" />
            <item drawable="@drawable/usagi_akubi2" duration="1000" />
            <item drawable="@drawable/usagi_akubi1" duration="500" />
        </repeat-item>
    </motion>
    <motion state="awake" nextState="stop" checkMove="true">
        <item drawable="@drawable/usagi_awake" duration="750" />
    </motion>
    <motion state="moveUp">
        <repeat-item>
            <item drawable="@drawable/usagi_up1" duration="250" />
            <item drawable="@drawable/usagi_up2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveDown">
        <repeat-item>
            <item drawable="@drawable/usagi_down1" duration="250" />
            <item drawable="@drawable/usagi_down2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveLeft">
        <repeat-item>
            <item drawable="@drawable/usagi_left1" duration="250" />
            <item drawable="@drawable/usagi_left2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveRight">
        <repeat-item>
            <item drawable="@drawable/usagi_right1" duration="250" />
            <item drawable="@drawable/usagi_right2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveUpLeft">
        <repeat-item>
            <item drawable="@drawable/usagi_upleft1" duration="250" />
            <item drawable="@drawable/usagi_upleft2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveUpRight">
        <repeat-item>
            <item drawable="@drawable/usagi_upright1" duration="250" />
            <item drawable="@drawable/usagi_upright2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveDownRight">
        <repeat-item>
            <item drawable="@drawable/usagi_dwright1" duration="250" />
            <item drawable="@drawable/usagi_dwright2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveDownLeft">
        <repeat-item>
            <item drawable="@drawable/usagi_dwleft1" duration="250" />
            <item drawable="@drawable/usagi_dwleft2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="wallLeft" nextState="wait">
        <repeat-item repeatCount="3">
            <item drawable="@drawable/usagi_ltogi1" duration="250" />
            <item drawable="@drawable/usagi_ltogi2" duration="250" />
        </repeat-item>
    </motion>
    <motion state="wallRight" nextState="wait">
        <repeat-item repeatCount="3">
            <item drawable="@drawable/usagi_rtogi1" duration="250" />
            <item drawable="@drawable/usagi_rtogi2" duration="250" />
        </repeat-item>
    </motion>
</motion-params>