<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15.0dip" />
            <gradient android:startColor="#ffededed" android:endColor="#ffededed" android:angle="270.0" android:centerY="0.6" android:centerColor="#ffd9d9d9" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="15.0dip" />
                <gradient android:startColor="#ffffff00" android:endColor="#ffff9900" android:angle="270.0" />
            </shape>
        </clip>
    </item>
</layer-list>